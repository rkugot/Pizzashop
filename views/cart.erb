<h2>Your Cart</h2>

<div>
	<table class="table table-striped">
		<thead>
			<tr>
				<th class="col-md-2">Name</th>
				<th class="col-md-2">Price</th>
				<th>Qty</th>
			</tr>
		</thead>
		<tbody>
			<% total_price = 0 %>
			<% total_qty = 0 %>
			<% @items.each do |item| %>
				<tr>
					<td><%= item[0].title %></td>
					<td><%= item[0].price %></td>
					<td><%= item[1] %></td>
				</tr>
				<% total_price += item[0].price.to_i * item[1].to_i %>
				<% total_qty += item[1].to_i %>
			<% end %>
				<tr>
					<td></td>
					<td></td>
					<td>Total: <%= total_qty %></td>
					<td class="col-md-7">Total price: <%= total_price %></td>
				</tr>
		</tbody>
	</table>
</div>
<form action="/order" method="POST">

    <input name="order[list]" type="hidden" value="<%= @orders %>">

    <div class="form-group">
      <label>Name:</label>
      <input name="order[name]" type="text" class="form-control" placeholder="Enter name">
    </div>

    <div class="form-group">
      <label>Phone:</label>
      <input name="order[phone]" type="text" class="form-control" placeholder="Enter phone">
    </div>

    <div class="form-group">
      <label>Address:</label>
      <input name="order[address]" type="text" class="form-control" placeholder="Enter address">
    </div>

    <button type="submit" class="btn btn-success btn-lg">Place this order</button>
    <button class="btn btn-danger btn-lg" onclick="return order_cancel()">Cancel</button>

</form>