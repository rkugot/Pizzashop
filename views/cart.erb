<h2>Your Cart</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th class="col-md-2">Name</th>
			<th class="col-md-2">Price</th>
			<th>Qty</th>
		</tr>
	</thead>
	<tbody>
		<% total_price = 0 %>
		<% total_qty = 0 %>
		<% @items.each do |item| %>
			<tr>
				<td><%= item[0].title %></td>
				<td><%= item[0].price %></td>
				<td><%= item[1] %></td>
			</tr>
			<% total_price += item[0].price.to_i * item[1].to_i %>
			<% total_qty += item[1].to_i %>
		<% end %>
			<tr>
				<td></td>
				<td></td>
				<td>Total: <%= total_qty %></td>
				<td class="col-md-7">Total price: <%= total_price %></td>
			</tr>
	</tbody>
</table>
<form action="/order" method="POST">

    <div class="form-group">
      <label>Your order:</label>
      <input name="order[list]" type="text" class="form-control" placeholder="Введите ваше имя" value="<%= @orders %>">
    </div>

    <div class="form-group">
      <label>Name:</label>
      <input name="order[name]" type="text" class="form-control" placeholder="Enter name" value="<%= @phone %>">
    </div>

    <div class="form-group">
      <label>Phone:</label>
      <input name="order[phone]" type="text" class="form-control" placeholder="Enter phone" value="<%= @datetime %>">
    </div>

    <div class="form-group">
      <label>Address:</label>
      <input name="order[address]" type="text" class="form-control" placeholder="Enter address" value="<%= @datetime %>">
    </div>



    <button type="submit" class="btn btn-primary btn-lg">Order</button>
</form>