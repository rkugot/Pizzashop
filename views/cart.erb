<h2>Your Cart</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th class="col-md-2">Name</th>
			<th class="col-md-2">Price</th>
			<th>Qty</th>
		</tr>
	</thead>
	<tbody>
		<% total_price = 0 %>
		<% total_qty = 0 %>
		<% @items.each do |item| %>
			<tr>
				<td><%= item[0].title %></td>
				<td><%= item[0].price %></td>
				<td><%= item[1] %></td>
			</tr>
			<% total_price += item[0].price.to_i * item[1].to_i %>
			<% total_qty += item[1].to_i %>
		<% end %>
			<tr>
				<td></td>
				<td></td>
				<td>Total: <%= total_qty %></td>
				<td class="col-md-7">Total price: <%= total_price %></td>
			</tr>
	</tbody>
</table>